<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fundo marrom para o efeito de fumaça -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#8B4513" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <!-- Botão normal sobreposto -->
    <item android:top="5dp" android:left="5dp" android:right="5dp" android:bottom="5dp">
        <bitmap android:src="@drawable/vector_icebox" />
    </item>
</layer-list>
